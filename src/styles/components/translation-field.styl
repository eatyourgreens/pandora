.field-editor
  display: flex
  font-size: 1em
  border-bottom: 1px solid black
  padding-top: 1em
  
  h3
    flex: 1
    font-size: 1em
    font-weight: bold
    position: relative
    vertical-align: middle
    
  button
    background: #fff
    border: 1px solid #000
    color: #000
    height: 2em
    font-size: 0.7em
    line-height: 1
    padding: .2em
    vertical-align: middle
  
  > p
  > div
    flex: 2